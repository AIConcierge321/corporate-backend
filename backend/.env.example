# Corporate Travel Platform - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Application will not start without these
# ===========================================

# Database connection string (PostgreSQL)
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5435/corporate_travel"

# JWT signing key - MUST be at least 32 characters
# Generate with: openssl rand -hex 32
SECRET_KEY="your-secret-key-here-at-least-32-characters"

# ===========================================
# DEVELOPMENT ONLY - NEVER enable in production!
# ===========================================

# Enable mock authentication for local development
# Set to true ONLY for local testing
DEV_MODE=false

# ===========================================
# OPTIONAL - With sensible defaults
# ===========================================

# Redis connection
REDIS_URL="redis://localhost:6385/0"

# JWT settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Comma-separated list of allowed origins
# CORS_ORIGINS="https://app.example.com,https://admin.example.com"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# External API Keys - Travel Suppliers
# ===========================================

# ---- AirportTransfer.com (Ground Transport) ----
# Get API key from: https://sandbox.airporttransfer.com/dashboard/api-keys
# Contact: emine@airporttransfer.com, hasan@airporttransfer.com
AIRPORT_TRANSFER_API_KEY=""
AIRPORT_TRANSFER_USE_SANDBOX=true   # Set to false for production
AIRPORT_TRANSFER_USE_MOCK=false     # Set to true to use mock data (no API calls)

# ---- All Aboard (European Rail) ----
# Get API key from: https://dashboard.allaboard.eu/
# Docs: https://docs.allaboard.eu/
ALLABOARD_API_KEY=""
ALLABOARD_USE_TEST=false  # Set to true for test environment
